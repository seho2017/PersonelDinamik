@model PersonelDinamik.Models.EntitiyFrameWork.Departman

@{
    ViewBag.Title = "yeni";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Kaydet", "Departman", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label for="AD">Departman Adı</label>
        @Html.TextBoxFor(m => m.DepartmanAd, new { @class = "form-control", placeholder = "Departman Adı" })
        @Html.ValidationMessageFor(m => m.DepartmanAd)
    </div>
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-success">Kaydet</button>
}
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
